== $#{text_field_tag "event[#{section}][amount]", line_item_amount_value(defined?(line_item) && line_item || nil), :size => 8, :class => "number", :onchange => "Events.updateUnassignedFor('#{section}')"}
= "or "
== %#{text_field_tag "event[#{section}][percent]", line_item_percent_value(defined?(line_item) && line_item || nil), :size => 8, :class => "percent", :onchange => "Events.updatePercentsFor('#{section}')"}

= bucket_action_phrase_for(section)
= select_bucket(section, :splittable => false, :line_item => defined?(line_item) && line_item || nil)
= link_to "[x]", '#', onclick: "Events.removeLineItem(this.up('li'))"
